@{
    ViewBag.Title = "Home Page";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="../../Content/Index.css" />
</head>
<script src="~/Scripts/SortBooks.js"></script>
<script src="~/Scripts/FilterBooks.js"></script> 
<table id="table">
    <tr>
        <th>Название</th>
        <th>Автор</th>
        <th>Тип переплета</th>
        <th>Цена</th>
    </tr>
    <div id="CorrectionFields">
        <p> Сортировка по:</p>
        <select id="select">
            <option value="author">Автору</option>
            <option value="cost">Цене</option>
        </select>

        <p>Жанр:</p>
        <select id="genre">
            <option value="All">Все</option>
            <option value="Романтика">Романтика</option>
            <option value="Фантастика">Фантастика</option>
            <option value="Научная">Научная</option>
        </select>
    </div>
    @foreach (var item in Model)
    {
        <tr class="model">
            <td> @item.Name</td>
            <td>@item.Author</td>
            <td>@item.Type</td>
            <td>@item.Cost</td>
            <td>
                <form action="/Book/ViewCurrentBook" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <input type="submit" value="Подробнее..." />
                </form>
            </td>
        </tr>

    }



</table>

